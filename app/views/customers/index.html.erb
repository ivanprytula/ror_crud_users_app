<div class="container my-3">
  <h1 class="text-center">Data to perform CRUD Operations</h1>
  <%= link_to new_customer_path, class: "btn btn-outline-dark mb-2" do %>
    <i class="bi bi-person-plus"></i> Create New User
  <% end %>


  <div class="table-responsive">
    <table class="table table-striped table-bordered table-hover">
      <caption>List of users</caption>
      <thead class="table-dark">
      <tr>
        <th scope="col">ID</th>
        <th scope="col">Username</th>
        <th scope="col">Email</th>
        <th scope="col">Password</th>
        <th scope="col" colspan="3" class="text-center">CRUD Operations</th>
      </tr>
      </thead>

      <tbody>
      <% @customers.each do |customer| %>
        <tr>
          <th scope="row"><%= customer.id %></th>
          <td><%= customer.username %></td>
          <td><%= customer.email %></td>
          <td><%= customer.password %></td>
          <td class='text-center'>
            <%= link_to customer, class: "btn btn-primary" do %>
              <i class="bi bi-eye"></i> VIEW
            <% end %>
          </td>
          <td class='text-center'>
            <%= link_to edit_customer_path(customer), class: "btn btn-secondary" do %>
              <i class="bi bi-pencil"></i> EDIT
            <% end %>
          </td>
          <td class='text-center'>
            <%= button_to customer, method: :delete, class: "btn btn-danger" do %>
              <i class="bi bi-trash"></i> DELETE
            <% end %>
          </td>
        </tr>
      <% end %>
      </tbody>
    </table>
  </div>

</div>

<div class="container text-center mt-5">
  <%= link_to "Back", root_path, class: "btn btn-warning mt-5" %>
</div>
